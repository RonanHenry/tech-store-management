<Window x:Class="TechStoreWpf.Views.Windows.WaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechStoreWpf.Views.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Please wait" SizeToContent="WidthAndHeight">
    
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Loading data from source, please wait..." FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 0, 0, 5" />
        <ProgressBar Grid.Row="1" IsIndeterminate="True" Height="20" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />

    </Grid>
    
</Window>
